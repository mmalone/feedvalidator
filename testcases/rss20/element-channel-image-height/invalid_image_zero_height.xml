<!--
  Description:  image must contain non-zero height
  Expect:       InvalidHeight{parent:image,element:height}
-->

<rss version="2.0">
<channel>
<title>Invalid image</title>
<link>http://purl.org/rss/2.0/</link>
<description>foo</description>
<image>
<title>Invalid image</title>
<link>http://purl.org/rss/2.0/</link>
<url>http://example.com/image.jpg</url>
<height>0</height>
</image>
</channel>
</rss>
