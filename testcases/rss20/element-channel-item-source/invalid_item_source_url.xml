<!--
  Description:  item source url attribute must be a full URL
  Expect:       InvalidURLAttribute{parent:item,element:source,attr:url}
-->

<rss version="2.0">
<channel>
<title>Invalid item source URL</title>
<link>http://purl.org/rss/2.0/</link>
<description>item source must include url attribute which is a full URL</description>
<item>
<title>Invalid item source URL</title>
<link>http://purl/org/rss/2.0/?item</link>
<description>Foo</description>
<source url="example.com">Mark Pilgrim</source>
</item>
</channel>
</rss>
